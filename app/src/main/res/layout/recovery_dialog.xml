<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:gravity="center_horizontal"
     android:paddingRight="16dp"
     android:paddingBottom="8dp"
     android:paddingLeft="16dp">

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_centerHorizontal="true"
         android:paddingBottom="8dp"
         android:textSize="16sp"
         android:singleLine="true"
         android:textColor="#F8EE96"
         tools:ignore="TextContrastCheck"
         android:id="@+id/t1"
         android:paddingTop="8dp"
         android:text="@string/recovery_title"
         android:textStyle="bold" />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_below="@id/t1"
         android:layout_centerHorizontal="true"
         android:paddingBottom="8dp"
         android:textSize="15sp"
         android:textColor="#DDE0E0"
         tools:ignore="TextContrastCheck"
         android:id="@+id/t2"
         android:paddingTop="8dp"
         android:text="@string/notice_forgotten_pswd" />

    <LinearLayout
         android:layout_height="56dp"
         android:layout_width="@dimen/field_size"
         android:layout_centerInParent="true"
         android:layout_below="@id/t2"
         android:background="@drawable/edt_bg"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:id="@+id/l1">

        <EditText
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:paddingRight="10dp"
             android:textSize="15sp"
             android:textColor="#FDFDFD"
             android:ems="10"
             tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck"
             android:background="@android:color/transparent"
             android:gravity="center_vertical|center|center_horizontal|start"
             android:lines="1"
             android:singleLine="true"
             android:paddingLeft="10dp"
             android:inputType="textPassword"
             android:id="@+id/skDialog" />

    </LinearLayout>

</RelativeLayout>