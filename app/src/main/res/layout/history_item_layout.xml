<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#ff464343"
    android:padding="1dp" >

    <TextView
        android:id="@+id/transfer_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="top|start"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff5974f9"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/transfer_type"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/transfer_date"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/oneval_money" />

    <TextView
        android:id="@+id/transfer_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/transfer_time"
        android:layout_toEndOf="@id/transfer_type"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#ffded4d3"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/layout1ImageView1"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/transfer_date"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/transfer_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/layout1ImageView1"
        android:gravity="top|start"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:typeface="monospace" />

</RelativeLayout>