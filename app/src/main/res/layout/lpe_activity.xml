<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp" >

    <TextView
        android:id="@+id/lpe_text"
        android:layout_width="@dimen/field_size"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:text="@string/lpe_text"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:textColor="#DDE0E0"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="@dimen/field_size"
        android:layout_height="56dp"
        android:layout_below="@id/lpe_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edt_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/pswdD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="start|center|center_horizontal|center_vertical"
            android:inputType="numberPassword"
            android:lines="1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLength="12"
            android:textColor="#FDFDFD"
            android:textSize="15sp"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />
    </LinearLayout>

</RelativeLayout>
