<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:theme="@style/AppTheme">

    <RelativeLayout
         android:layout_height="50dp"
         android:layout_width="match_parent"
         android:background="@android:color/transparent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:layout_alignParentTop="true"
         android:id="@+id/rel2">

        <ImageView
             android:layout_height="23dp"
             android:layout_width="23dp"
             android:contentDescription="@string/app_name"
             android:scaleType="fitCenter"
             android:src="@drawable/arrow_up"
             android:background="@android:color/transparent"
             android:layout_centerVertical="true"
             tools:ignore="ImageContrastCheck"
             android:id="@+id/bottomsheet_arrow" />

        <ImageView
             android:layout_height="23dp"
             android:layout_width="23dp"
             android:contentDescription="@string/app_name"
             android:scaleType="fitCenter"
             android:src="@drawable/transfer"
             android:background="@android:color/transparent"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             tools:ignore="ImageContrastCheck"
             android:id="@+id/bottomsheet_send" />

    </RelativeLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_below="@id/rel2"
         android:gravity="center_horizontal"
         android:background="@drawable/background"
         android:padding="8dp"
         android:orientation="vertical"
         android:layout_marginTop="2dp"
         android:id="@+id/rel_">

        <RelativeLayout
             android:layout_height="56dp"
             android:layout_width="@dimen/field_size"
             android:layout_margin="0dp">

            <ImageView
                 android:layout_height="match_parent"
                 android:layout_width="46dp"
                 android:adjustViewBounds="true"
                 android:contentDescription="@string/app_name"
                 android:scaleType="fitCenter"
                 android:src="@drawable/name_"
                 android:background="@android:color/transparent"
                 android:layout_centerVertical="true"
                 android:padding="7dp"
                 android:layout_alignParentStart="true"
                 android:id="@+id/user_imgv" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:adjustViewBounds="true"
                 android:contentDescription="@string/app_name"
                 android:scaleType="fitCenter"
                 android:src="@drawable/scan"
                 android:clickable="true"
                 android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true"
                 android:focusable="true"
                 tools:ignore="DuplicateSpeakableTextCheck"
                 android:id="@+id/scan_button" />

            <EditText
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:layout_toStartOf="@id/scan_button"
                 android:layout_centerVertical="true"
                 android:textSize="16sp"
                 android:singleLine="true"
                 android:textColor="#ffffffff"
                 android:ems="10"
                 tools:ignore="Autofill,HardcodedText"
                 android:layout_toEndOf="@id/user_imgv"
                 android:background="@drawable/edt_bg"
                 android:gravity="center_vertical|center|center_horizontal"
                 android:hint="JULES-1111"
                 android:layout_margin="4dp"
                 android:lines="1"
                 android:inputType="textCapCharacters"
                 android:id="@+id/user_id_dest" />

        </RelativeLayout>

        <LinearLayout
             android:layout_height="56dp"
             android:layout_width="@dimen/field_size"
             android:gravity="center_vertical"
             android:paddingRight="51dp"
             android:orientation="horizontal"
             android:paddingLeft="51dp"
             android:layout_marginTop="10dp">

            <EditText
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:textSize="16sp"
                 android:singleLine="true"
                 android:textColor="#ffffffff"
                 android:ems="10"
                 tools:ignore="Autofill"
                 android:background="@drawable/edt_bg"
                 android:gravity="center_vertical|center|center_horizontal"
                 android:hint="@string/min_am"
                 android:layout_margin="4dp"
                 android:lines="1"
                 android:inputType="numberDecimal"
                 android:id="@+id/value" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
             android:layout_height="50dp"
             android:layout_width="250dp"
             android:padding="5dp"
             android:textSize="15sp"
             android:textColor="#ffffffff"
             android:layout_marginTop="10dp"
             tools:ignore="TextContrastCheck"
             android:layout_gravity="center_horizontal"
             app:cornerRadius="10dp"
             android:textAllCaps="false"
             style="@style/buttonStyle"
             android:id="@+id/sendbutton"
             android:text="@string/send" />

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:background="@drawable/white_bg"
             android:orientation="vertical"
             android:layout_marginTop="5dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:paddingEnd="5dp"
                 android:gravity="center_vertical|center|center_horizontal"
                 android:textSize="14sp"
                 android:textColor="#ff0a140e"
                 android:paddingStart="5dp"
                 android:text="@string/scan_qr_send" />

            <RelativeLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="37dp"
                 android:paddingTop="12dp">

                <ImageView
                     android:layout_height="150dp"
                     android:layout_width="150dp"
                     android:adjustViewBounds="true"
                     android:contentDescription="@string/app_name"
                     android:scaleType="fitCenter"
                     android:background="@android:color/transparent"
                     android:layout_centerHorizontal="true"
                     android:id="@+id/dest_qr" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>